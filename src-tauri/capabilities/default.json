{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "validate_url",
          "sidecar": true,
          "args": [
            {
              "validator": "https?://\\S+"
            }
          ]
        }
      ]
    },
    "shell:default"
  ]
}